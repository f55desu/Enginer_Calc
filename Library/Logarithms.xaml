<Window x:Class="Enginer_Calc.Logarithms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enginer_Calc"
        mc:Ignorable="d" Title="Logarithms" Height="550" Width="750" Icon="/calc.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/big_wave.jpg"/>
        </Grid.Background>
        <Label x:Name="BodyLabel" Content="{DynamicResource labelLogBody}" HorizontalAlignment="Left" Margin="147,38,0,0" VerticalAlignment="Top" Width="90" Height="38" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="132,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" FontSize="20" x:Name="tbA"/>
        <TextBox HorizontalAlignment="Left" Margin="305,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" FontSize="20" x:Name="tbB"/>
        <Label x:Name="BaseLabel" Content="{DynamicResource labelLogBase}" HorizontalAlignment="Left" Margin="307,40,0,0" VerticalAlignment="Top" Width="118" Height="38" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="500,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" FontSize="20" IsReadOnly="True" x:Name="resultat"/>
        <Label x:Name="ResultLabel" Content="{DynamicResource labelRes}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="124" Height="36" FontSize="20" FontWeight="Bold" Margin="500,40,0,0" FlowDirection="LeftToRight" HorizontalContentAlignment="Center"/>
        <Button x:Name="LogCustomLabel" Content="{DynamicResource buttonLogsA}" HorizontalAlignment="Left" Margin="216,185,0,0" VerticalAlignment="Top" Height="45" Width="298" Click="Log_a" FontSize="20"/>
        <Button x:Name="Log10Label" Content="{DynamicResource buttonLogs10}" HorizontalAlignment="Left" Margin="216,267,0,0" VerticalAlignment="Top" Height="45" Width="298" Click="Log_10" FontSize="20"/>
        <Button x:Name="LogELabel" Content="{DynamicResource buttonLogsE}" HorizontalAlignment="Left" Margin="216,350,0,0" VerticalAlignment="Top" Height="45" Width="298" Click="Log_e" FontSize="20"/>
        <Button x:Name="BackButton" Content="{DynamicResource buttonBack}" Click="Back" HorizontalAlignment="Left" Margin="627,466,0,0" VerticalAlignment="Top" Height="41" Width="101" FontSize="20"/>
        <Button Content="{DynamicResource buttonReset}" HorizontalAlignment="Left" Margin="331,133,0,0" VerticalAlignment="Top" Height="26" Width="68" RenderTransformOrigin="0.325,0.425" Click="Button_ResetY_Click"/>
        <Button Content="{DynamicResource buttonReset}" HorizontalAlignment="Left" Margin="158,133,0,0" VerticalAlignment="Top" Height="26" Width="68" RenderTransformOrigin="0.325,0.425" Click="Button_ResetX_Click"/>
    </Grid>
</Window>
