<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Calculator by f55" Height="550" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbA" HorizontalAlignment="Right" Margin="0,73,520,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" Grid.Column="1" FontSize="20"/>
        <TextBox x:Name="tbB" HorizontalAlignment="Right" Margin="0,73,332,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" Grid.Column="1" FontSize="20"/>
        <TextBox x:Name="resultat" HorizontalAlignment="Right" Margin="0,73,141,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="34" Grid.Column="1" IsReadOnly="True" FontSize="22"/>
        <Button Content="-"  Click="Difference" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="231,183,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <Button Content="/"  Click="Divide" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="544,183,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <Button Content="x"  Click="Multiply" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="389,183,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <Button Content="+" Click="Summ" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="84,183,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <Label Content="Число" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="44" Margin="336,35,0,0"/>
        <Label Content="Число" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="139,35,0,0"/>
        <Label Content="Результат&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="26" Margin="508,35,0,0"/>
        <Button Content="Logs" Click="GoToLog" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="84,303,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <Button Content="√" Click="Sukurt" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="231,303,0,0" VerticalAlignment="Top" Height="52" Width="110" FontSize="20"/>
        <!--<Button Content="Выход" Click="Exit" Grid.Column="1" HorizontalAlignment="Left" Background="#19FEDD"  Margin="639,483,0,0" VerticalAlignment="Top" Height="41" Width="101" FontSize="20"/>-->

    </Grid>
</Window>
